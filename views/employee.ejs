<!DOCTYPE html>
<html>
<head>
    	<style type="text/css">
        		body{
			padding:70px;
		}
        a{ padding:5%;}
	</style>

<!-- metadata goes in head -->
<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

	<title>Management System</title>

</head>
<body>
<form action="/add1" method="POST">
<input type="text"  name="Emp_id" id="ID" placeholder="ID">
<input type="text" id="FName" placeholder="First Name" name="FName">
<input type="text" id="LName" placeholder="Last Name" name="LName" >
<input type="text" id="Emp_Address" placeholder="Address" name="Emp_Address">
<input type="text" id="Salary" placeholder="Salary" name="Salary" >
<input type="text" id="Gender" placeholder="Gender" name="Gender">
<input type="text" id="Store_Number" placeholder="Store Number"  name="Store_Number">
<button type="submit" class="btn btn-primary" >Add</button>
</form>
<div class="table-wrapper">
     <% if (Employee!=null) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Address</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Store Number</th>
                    </tr>
                </thead>
                <tbody>
                    <% Employee.forEach((Emp, index) => { %>
                        <tr>
                            <th scope="row"><%= Emp.Emp_id %></th>
                            <td><%= Emp.FName %></td>
                            <td><%= Emp.LName %></td>
                            <td><%= Emp.Emp_Address %></td>
                            <td><%= Emp.Salary %></td>
                            <td><%= Emp.Gender %></td>
                            <td><%= Emp.Str_no %></td>
                            <td>
                                <a href="/edit1/<%= Emp.Emp_id%>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete1/<%= Emp.Emp_id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                       
                    <% }) %>
                </tbody>
            </table>
             <% } else { %>
            <p class="text-center">No Employees found. Go <a href="/add" >here</a> to add Employees.</p>
        <% } %>
    </div>

     <script src="https://code.jquery.com/jquery-2.1.4.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

</body>
</html>
